    private async Task NextSection(string fromCondition)
    {
        logger.LogInformation($"handling NextSection {fromCondition}");
        switch (fromCondition)
        {
            case nameof(IsFreshInstall):
                // TODO record fresh install view
                IsFreshInstall = false;
                NavManager.NavigateTo(RouteToStart);
                break;
            case nameof(IsNewRelease):
                // TODO record viewing NewRelease
                IsNewRelease = false;
                NavManager.NavigateTo(RouteToStart);
                break;

            case nameof(IsTermsAgreementNeeded):
                var onboardState = new OnboardState(DateTime.UtcNow, termsMarkupHash, DateTime.UtcNow, privacyMarkupHash, true);
                var res = await storageService.SetItem<OnboardState>(onboardState);
                if (res.IsFailed)
                {
                    logger.LogError("Failed to store onboard state");
                    return;
                }
                // TODO P2 record acceptance of terms and privacy, as List<(DateTime agreed, Hash docHash)> tuple in wallet for terms and for privacy

                IsTermsAgreementNeeded = false;
                NavManager.NavigateTo(RouteToStart);


                break;
            case nameof(IsNotConfigured):
                // TODO record viewing NotConfigured
                IsNotConfigured = false;
                NavManager.NavigateTo(RouteToStart);
                break;


            case nameof(IsLocked):
                // TODO record viewing Locked
                IsLocked = false;
                NavManager.NavigateTo(RouteToStart);
                break;

            case nameof(IsNotConnected):
                // TODO record viewing NotConnected
                IsNotConnected = false;
                NavManager.NavigateTo(RouteToStart);
                break;


            default:
                throw new Exception($"Next from unknown section");
        }
        await Task.Delay(0); // hack
    }

