@if (Count is null)
{
    <MudProgressCircular Size="Size.Small" Indeterminate="true" Style="vertical-align: middle; width: 1em !important; height: 1em !important;" />
}
else if (HideParentheses)
{
    @Count
}
else
{
    @($"({Count})")
}

@code {
    [Parameter] public string? Count { get; set; }
    [Parameter] public bool HideParentheses { get; set; }
}
