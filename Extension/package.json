{
  "name": "keriauth-signifyextension",
  "version": "0.0.1",
  "description": "KERI Auth Browser Extension",
  "main": "index.js",
  "scripts": {
    "build:es6": "node ./node_modules/typescript/bin/tsc --project tsconfig.json",
    "build:app": "node ./node_modules/typescript/bin/tsc --project tsconfig.app.json",
    "bundle:esbuild": "node esbuild.config.js",
    "build": "npm run build:es6 && npm run bundle:esbuild && npm run build:app",
    "build:dev": "NODE_ENV=development npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "watch": "npm run watch:tsc & npm run watch:app & npm run watch:esbuild",
    "watch:tsc": "node ./node_modules/typescript/bin/tsc --watch --preserveWatchOutput",
    "watch:app": "node ./node_modules/typescript/bin/tsc --project tsconfig.app.json --watch --preserveWatchOutput",
    "watch:esbuild": "node esbuild.config.js --watch",
    "typecheck": "node ./node_modules/typescript/bin/tsc --noEmit",
    "lint": "node ./node_modules/eslint/bin/eslint.js wwwroot/scripts/**/*.ts wwwroot/app.ts",
    "lint:fix": "node ./node_modules/eslint/bin/eslint.js wwwroot/scripts/**/*.ts wwwroot/app.ts --fix",
    "clean": "rm -rf dist"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@noble/hashes": "^1.3.2",
    "@types/urlsafe-base64": "^1.0.28",
    "buffer": "^6.0.3",
    "cbor2": "^1.7.1",
    "esbuild-plugin-alias": "^0.2.1",
    "libsodium-wrappers-sumo": "^0.7.9",
    "mathjs": "^12.4.0",
    "signify-polaris-web": "github:weboftrust/polaris-web#7d7dd13",
    "structured-headers": "^0.5.0",
    "urlsafe-base64": "^1.0.0"
  },
  "devDependencies": {
    "@types/libsodium-wrappers-sumo": "^0.7.8",
    "@types/urlsafe-base64": "^1.0.28",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "chrome": "^0.1.0",
    "chrome-types": "^0.1.372",
    "concurrently": "^9.1.2",
    "ecdsa-secp256r1": "^1.3.3",
    "esbuild": "^0.24.0",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^9.18.0",
    "path": "^0.12.7",
    "signify-ts": "0.3.0-rc2",
    "typescript": "^5.4.2",
    "undici-types": "^6.18.2",
    "urlsafe-base64": "^1.0.0"
  },
  "browser": {
    "crypto": false
  },
  "type": "module",
  "engines": {
    "node": ">=22.13.0",
    "npm": ">=11.0.0"
  }
}
