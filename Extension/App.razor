@inherits AppCacheReactiveComponentBase

@code {
    // fields
    // private static IStorageService? staticStorageService;
    private static ILogger<App>? staticLogger;
    private static NavigationManager? staticNavManager;
    // private IDisposable? stateSubscription;
    private StorageObserver<Preferences>? preferencesStorageObserver;
    private StorageObserver<SessionExpiration>? sessionExpirationStorageObserver;

    // properties
    public static Uri? InitialUri { get; set; }
    // properties intended to cascade down to child components (layouts, pages) via [CascadingParameter] attribution
    public static Preferences Prefs { get; set; } = new Preferences();
    public SessionExpiration? InactivityTimeoutCache { get; set; }

    // reactive properties
    // public static bool IsDarkTheme => Prefs.IsDarkTheme;

    protected override async Task OnInitializedAsync()
    {
        logger.LogInformation($"OnInitializedAsync");
        // TODO P2 hack. Instead, create a StaticHelper static class that has injected methods
        staticNavManager = navManager;
        staticLogger = logger;
        // staticStorageService = storageService;

        // Initialize services as needed
        InitialUri = navManager.ToAbsoluteUri(navManager.Uri);

        preferencesStorageObserver = new StorageObserver<Preferences>(
            storageService,
            StorageArea.Local,
            onNext: async (Preferences value) => StateHasChanged(),
            onError: async (Exception error) => await HandleErrorPreferences(error),
            logger: logger
        );

        sessionExpirationStorageObserver = new StorageObserver<SessionExpiration>(
            storageService,
            StorageArea.Session,
            onNext: async (SessionExpiration updatedValue) =>
            {
                InactivityTimeoutCache = updatedValue;
                logger.LogInformation("Observed InactivityTimeoutCacheModel change: SessionExpirationUtc={SessionExpirationUtc} UtcNow={s}",
                    InactivityTimeoutCache.SessionExpirationUtc, DateTime.UtcNow);
                StateHasChanged();
            },
            onCompleted: async () =>
            {
                logger.LogInformation("InactivityTimeoutCacheModel observation completed");
            },
            onError: async (Exception error) =>
            {
                logger.LogError("Error observing InactivityTimeoutCacheModel: " + error.Message);
            },
            logger: logger
        );

        // Subscribe to and handle messages from background worker via messaging service
        appBwMessagingService.Subscribe(
            onNext: (message) =>
            {
                logger.LogInformation("App from BW/MessagingService: type={type}, requestId={requestId}",
                    message.Type, message.RequestId);
                // Handle specific message types if needed
                // For now, just log
            },
            onError: (error) =>
            {
                logger.LogError(error, "Error from BW messaging service");
            },
            onCompleted: () =>
            {
                logger.LogInformation("BW messaging service completed");
            }
        );

        // Initialize messaging with background worker
        // Extract tabId from query string if present, otherwise use null
        var query = System.Web.HttpUtility.ParseQueryString(InitialUri.Query);
        var tabIdParam = query["tabId"];
        await appBwMessagingService.Initialize(tabIdParam ?? "");

        // reset sessionExpiration by showing activity
        // TODO P1 is this the right place for this?  Do we need to set up javascript window event listeners too? If so, see:
        // https://chatgpt.com/c/691a021b-c780-8333-9f4d-f848f23f50dd
        var message = new AppBwUserActivityMessage(); // AppBwMessage<AppBwUserActivityMessage>(AppBwMessageTypes.USER_ACTIVITY, 0, null);
        await appBwMessagingService.SendToBackgroundWorkerAsync(message);

        logger.LogInformation("OnInitializedAsync NavigateIfNeeded");
        // TODO P0
        // logger.LogWarning("Routing to index from Uri {i}", navManager.Uri);
        // navManager.NavigateTo(RouteToIndex);
        // await NavigateIfNeeded();
        // logger.LogInformation("OnInitializedAsync complete");
        return;
    }

    async Task HandleErrorPreferences(Exception error)
    {
        logger.LogError("HandleErrorPreferences: " + error.Message);
    }

