{
  "action": {
    "default_title": "KERI Auth",
    "default_icon": {
      "16": "images/logoB016.png",
      "32": "images/logoB032.png",
      "48": "images/logoB048.png",
      "128": "images/logoB128.png"
    }
  },
  "author": "https://keriauth.com",
  "background": {
    "service_worker": "content/BackgroundWorker.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' ; object-src 'self'"
  },
  "default_locale": "en",
  "description": "Authenticate with decentralized identifiers and credentials, rooted in KERI and GLEIF vLEIs.",
  "host_permissions": [],
  "icons": {
    "16": "images/logo016.png",
    "48": "images/logo048.png",
    "128": "images/logo128.png",
    "512": "images/logo512.png"
  },
  "manifest_version": 3,
  "minimum_chrome_version": "127",
  "name": "KERI Auth",
  "optional_host_permissions": [
    "https://*/*",
    "http://localhost/*/*"
  ],
  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  },
  "permissions": [
    "activeTab",
    "alarms",
    "contextMenus",
    "scripting",
    "storage",
    "sidePanel"
  ],
  "short_name": "KERI Auth",
  "side_panel": {
    "default_path": "SidePanel.html"
  },
  "version": "0.2.9",
  "version_name": "0.2.9-local",
  "web_accessible_resources": [
    {
      "resources": [
        "framework/*",
        "content/*",
        "scripts/app.js",
        "scripts/es6/*",
        "scripts/esbuild/*",
        "images/*"
      ],
      "matches": [
        "chrome-extension://*/*"
      ]
    }
  ]
}